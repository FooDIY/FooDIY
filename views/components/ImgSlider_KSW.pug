div.phone
    div(style="display:none")
        html
            head
                meta(charset='UTF-8')
                title Title
                meta(charset='UTF-8')
                meta(name='viewport', content='width=device-width, initial-scale=1')
                link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
                link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Karma')
                link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
                link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
                link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
                link(rel='stylesheet', href='../css/TopMenu_KSW.css')
                link(rel='stylesheet', href='../css/MenuManagement_KSW.css')
                link(rel='stylesheet', href='../css/firstscss.scss')
            body
                svg(xmlns='http://www.w3.org/2000/svg')
                    symbol#menuthinner(viewbox='0 0 16 15')
                        style.
                            .ast0{fill:#222}
                        path.ast0(d='M0 0h16v1H0zM0 7h16v1H0zM4 14h12v1H4z')
                    symbol#view(viewbox='0 0 16 16')
                        style.
                            .bst0{fill:#222}
                        path.bst0(d='M0 0v7h7V0H0zm6 6H1V1h5v5zM9 0v7h7V0H9zm6 6h-5V1h5v5zM9 9v7h7V9H9zm6 6h-5v-5h5v5zM0 9v7h7V9H0zm6 6H1v-5h5v5z')

    header.header
        button#header__view-button.header__buttons(type='button')
            svg.header__buttons-svg
                use(xlink:href='#view')
        h1.header__logo
            a(href='#0') Photographer
        button#header__menu-button.header__buttons(type='button')
            svg.header__buttons-svg
                use(xlink:href='#menuthinner')

    nav.categories
        ul.categories-list
            li
                a(href='#') All photos
            li
                a(href='#') Portraits
            li
                a(href='#') Weddings
            li
                a(href='#') Love stories
            li
                a(href='#') Albums

    main
        mixin article(category, title, photo)
            article.post-card
                div.post-link(href='')
                    img(src= 'https://raw.githubusercontent.com/sedlukha/sedlukha.com/master/docs/portfolio/photo-slider/' + photo, alt='')
                    div.post__description
                        p.post__description__category= category
                        h2.post__description__title= title
                        p.post__description__excerpt  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Error, ratione, necessitatibus!
                        p.post__description__counter 13 photos

        .categories-slides
            .slide-wrapper
                .slide#all-photos
                    +article('albums', 'Urban and cities', 'albums/1.jpg')
                    +article('weddings', 'Mary  & Lesha', 'wedding/2.jpg')

                    +article('love stories', 'Alexa & Sebastian', 'lovestories/1.jpg')
                    +article('weddings', 'Nikkie  & Sam', 'wedding/1.jpg')
                    +article('portraits', 'Jackie Evan', 'portraits/1.jpg')
                    +article('albums', 'Architecture', 'albums/2.jpg')
                    +article('love stories', 'John & Liza', 'lovestories/2.jpg')
                    +article('portraits', 'Alex Clare', 'portraits/2.jpg')
                    +article('albums', 'Tattoo', 'albums/3.jpg')
                    +article('love stories', 'Michael & Ann', 'lovestories/3.jpg')
                    +article('weddings', 'Alex  & Vika', 'wedding/3.jpg')
                    +article('portraits', 'Ann Taylor', 'portraits/3.jpg')
                p.counter#allPhotosCounter
            .slide-wrapper
                .slide#portraits
                    +article('portraits', 'Jackie Evan', 'portraits/1.jpg')
                    +article('portraits', 'Alex Clare', 'portraits/2.jpg')
                    +article('portraits', 'Ann Taylor', 'portraits/3.jpg')
                p.counter#portraitsCounter
            .slide-wrapper
                .slide#weddings
                    +article('weddings', 'Nikkie  & Sam', 'wedding/1.jpg')
                    +article('weddings', 'Mary  & Lesha', 'wedding/2.jpg')
                    +article('weddings', 'Alex  & Vika', 'wedding/3.jpg')
                p.counter#weddingsCounter
            .slide-wrapper
                .slide#lovestories
                    +article('love stories', 'Alexa & Sebastian', 'lovestories/1.jpg')
                    +article('love stories', 'John & Liza', 'lovestories/2.jpg')
                    +article('love stories', 'Michael & Ann', 'lovestories/3.jpg')
                p.counter#lovestoriesCounter
            .slide-wrapper
                .slide#albums
                    +article('albums', 'Architecture', 'albums/2.jpg')
                    +article('albums', 'Urban and cities', 'albums/1.jpg')
                    +article('albums', 'Tattoo', 'albums/3.jpg')
                p.counter#albumsCounter

