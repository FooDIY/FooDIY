doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title SignUp
        link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Karma')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='../css/Signup_KSW.css')
        link(rel='stylesheet', href='../css/Login_KSW.css')
    body
        .signupform.container-fluid
            .signup-content
                form.form-horizontal(action='')
                    .form-group
                        img#foodiylogo(src='../img/foodiy_logo.gif', alt='')
                        .real_content
                            button#signup-google.signupgoogle.form-control
                                span
                                    img(src='../img/google_logo.png', alt='')
                                p Signup with Google
                            button#signup-naver.signupnaver.form-control
                                span
                                    img(src='../img/naver_logo.png', alt='')
                                p Signup with Naver
                            br
                            hr
                            .input-group-s
                                span.input-group-addon
                                    i.fa.fa-envelope
                            .input-group
                                input#email.form-control(type='email', placeholder='E-mail')
                                span.input-group-addon.login-button
                                    a#email_link(href='') 중복확인
                            .input-group-s
                                span.input-group-addon
                                    i.glyphicon.glyphicon-lock
                                input#password.form-control(type='password', placeholder='Password')
                                input#password2.form-control(type='password', placeholder='Confirm Password')
                            .input-group-s
                                span.input-group-addon
                                    i.fa.fa-user-circle-o(aria-hidden='true')
                            .input-group
                                input#nick_name.form-control(type='text', placeholder='Nickname')
                                span.input-group-addon.login-button
                                    a#nickname_link(href='') 중복확인
                            input.signupfoodiy.form-control(type='button', value='Sign Up', onclick='goPage()')

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
