doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Title
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Karma')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        link(rel='stylesheet', href='../css/TopMenu_KSW.css')
        link(rel='stylesheet', href='../css/MenuManagement_KSW.css')
        link(rel='stylesheet', href='../css/ImgSlider_KSW.css')
        link(rel='stylesheet', type='text/css', href='../css/MessageView_KKY.css')
        title 메세지
    body
        include components/TopMenu_Component
        #messageList.container
            .col-xs-12
                .col-xs-5.col-md-3.setBtnPadding
                  p
                    | 결제완료
                .col-xs-5.col-xs-offset-2.col-md-3.col-md-offset-6.setBtnPadding
                  button.btn-block.paymentButton(type='button', aria-label='Left Align')
                    | 결제세부정보
            #chatList.col-xs-12.messageDiv
                if(message)
                    each item in message
                        //내가보낸 메세지
                        if(item.from===passport.user.email)
                            .media
                                .media-body.rightMessage
                                    .arrow_box
                                        p
                                            =item.content
                                        p.date
                                            =item.fromNow
                                .media-right.media-bottom
                                    a(href='#')
                                        img.right(src='../img/defaultProfile.png', alt='Avatar')
                        else
                            .media
                                .media-left.media-bottom
                                    a(href='#')
                                        //member.Thumbnail 이미지 등록법 필요
                                        img.right(src='../img/defaultProfile.png', alt='Avatar')
                                .media-body.leftMessage
                                    .arrow_box
                                        p 
                                            =item.content
                                        p.date
                                            =item.fromNow
            #sendMessage.col-xs-12
                form
                    .input-group
                        // 포커스될때만 테두리 그어주면 좋겠다고 생각됨
                        textarea#content.form-control.message(type='text', placeholder='메시지를 작성하세요...')
                        input#myname(type='hidden', value=passport.user.email, name='myname')
                        input#connum(type='hidden', value=connum, name='connum')
                        input#msg_to(type='hidden', value=member.email, name='msg_to')
                        .input-group-btn
                            button#message-button.btn.btn-default.send(type='button')
                              | 전송
                                      
