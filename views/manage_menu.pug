doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title foodiy
        link(rel='stylesheet', href='../css/bootstrap.css')
        // <link rel="stylesheet" href="../css/main_css.css">
        link(rel='stylesheet', href='../css/font-awesome.min.css')
        link(rel='stylesheet', href='../js/jquery-ui-1.12.1/jquery-ui.css')
        link(rel='stylesheet', href='../css/manage_menu.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        // <link rel="stylesheet" href="../css/test2.css">
    body
        include seller_top
        article.col-md-10
            .col-md-12.info_modify
                .col-md-2(style='padding:0')
                    img(src='../img/temp_logo.jpg', alt='')
                .col-md-offset-1.col-md-9
                    h3 안녕하세요&nbsp
                        = member.firstname
                        |&nbsp입니다.
                    br
                    .col-md-5
                        p
                            | 위치 : &nbsp
                            = member.address.add1
                            |&nbsp
                            = member.address.add2
                            small
                                button 수정
                    .col-md-offset-1.col-md-5
                        p
                            | 쉬는날 : 매주 수요일
                            small
                                button 수정
                    br
                    br
                    .col-md-5
                        p
                            | 주 운영시간 : 14:00 ~ 18:00
                            small
                                button 수정
                    .col-md-offset-1.col-md-5
                        p
                            | 최소 주문일 : 2일
                            small
                                button 수정
                .col-md-12
                    br
            .col-md-12
                h4(style='margin-top: 20px;') [ 메뉴 목록 ]

                .menu-list.col-md-12
                    .col-md-3
                        a(href='/seller/submit_menu')
                            img(src='https://image.freepik.com/free-icon/plus-sign-in-a-square_318-53016.jpg', style='height: 170px; margin-left: 65px; margin-top: 25px;', alt='')
                    if(menu.length>0)
                        .col-md-offset-1.col-md-3
                            form()
                                button(type='button', onclick="delmenu(this.form)")
                                    i.material-icons close
                                input(type='hidden', value=(menu[0]._id), name='menuid')
                                img(src=menu[0].image[0].image_url, alt='', width=270, height=187)
                    if(menu.length > 1)
                        .col-md-offset-1.col-md-3
                            form()
                                button(type='button', onclick="delmenu(this.form)")
                                    i.material-icons close
                                input(type='hidden' value=(menu[1]._id), name='menuid')
                                img(src=menu[1].image[0].image_url, alt='', width=270, height=187)
                - for (var i=2;i<menu.length;i++)
                    .menu-list.col-md-12
                        - var k=i
                        - for (var j=k;j<=k+2;j++)
                            if(j === menu.length)
                                - i=menu.length
                                - break
                            if(j===k)
                                .col-md-3
                                    form()
                                        button(type='button' onclick="delmenu(this.form)")
                                            i.material-icons close
                                        input(type='hidden' value=(menu[j]._id), name='menuid')
                                        img(src=menu[j].image[0].image_url, alt='', width=270, height=187)
                            else
                               .col-md-offset-1.col-md-3
                                   form()
                                       button(type='button' onclick="delmenu(this.form)")
                                            i.material-icons close
                                       input(type='hidden', value=(menu[j]._id), name='menuid')
                                       img(src=menu[j].image[0].image_url, alt='', width=270, height=187)
                            - i=j
    script(src='../js/jquery.js')
    script(src='../js/jquery-ui-1.12.1/jquery-ui.js')
    script(type='text/javascript', src='../js/bootstrap.js')
    script(type='text/javascript', src='../js/manage_menu.js')
