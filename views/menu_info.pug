        style.
            .payment_box ul li input {
                text-align: center;
                width: 220px;
                margin-bottom: 10px;
            }

            .messageform {
                padding-top: 150px;
            }

            .message-content {
                background-color: white;
                margin: 3% auto auto auto;
                width: 600px;
                padding: 0;
            }

            .carousel-inner img {
                width: 100%;
            }
    body(onload="myMap("+member.address.x+","+member.address.y+")")
        include top
        article.container-fluid
            .myslide
                #myCarousel.carousel.slide(data-ride='carousel')
                    // Indicators
                    ol.carousel-indicators
                        li.active(data-target='#myCarousel', data-slide-to='0')
                        - for(var i=1;i<menu.image.length;i++)
                            li(data-target='#myCarousel', data-slide-to=i)
                    // Wrapper for slides
                    .carousel-inner(role='listbox')
                        .item.active
                            img(src=menu.image[0].image_url, alt='Image', style='height: 500px;')
                            .carousel-caption
                        - for(var i=1;i<menu.image.length;i++)
                            .item
                                img(src=menu.image[i].image_url, alt='Image', style='height: 500px;')
                                .carousel-caption
                        // Left and right controls
                        a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
                            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                            span.sr-only Previous
                        a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
                            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                            span.sr-only Next
            .container.menu_info
                .col-xs-9
                    .col-xs-12
                        .foodiy_info
                            .col-xs-2
                                img(src='https://thumb1.shutterstock.com/display_pic_with_logo/1699708/398677477/stock-vector-woman-user-smartphone-design-flat-computer-user-icon-social-media-web-user-phone-web-phone-398677477.jpg', alt='', style='width: 50px; height: 50px; display: block; margin: auto; border-radius: 50%')
                                p(style='text-align: center')=member.firstname+" "+member.lastname
                            div(style='margin-top: 8px;')
                                p=member.firstname+"의 "+menu.menu_name
                                small(style='color: grey;')
                                    p= member.address.add1
                                br
                    .col-xs-12
                        .detail_info(style='border: solid 1px black;')
                            p
                            | 상세 설명
                            br
                            |                 -&nbsp
                            =menu.content
                        .detail_info(style='border: solid 1px black;')
                            p
                                | 재료 설명
                                br
                                - for (var i=0;i<menu.ingre.length;i++)
                                    .ingre-list.col-md-12
                                        - var k=i
                                        - for (var j=k;j<=k+2;j++)
                                            if(j === menu.ingre.length)
                                                - i=menu.ingre.length
                                                - break
                                            if(j === k)
                                                .col-md-3
                                                    img(src=menu.ingre[j].ingre_url, alt='', width=100, height=60)
                                                    p
                                                        |원산지 :&nbsp
                                                        =menu.ingre[j].madeby
                                                    p
                                                        |재료명 :&nbsp
                                                        =menu.ingre[j].ingre_name
                                            else
                                                .col-md-offset-1.col-md-3
                                                    img(src=menu.ingre[j].ingre_url, alt='', width=100, height=60)
                                                    p
                                                        | 원산지 :&nbsp
                                                        =menu.ingre[j].madeby
                                                    p
                                                        | 재료명 :&nbsp
                                                        =menu.ingre[j].ingre_name
                                            - i=j
                        //.detail_info(style='border: solid 1px black;')
                            p
                                | 식사 장소
                                br
                                |                 사진 사진 사진
                        .detail_info(style='border: solid 1px black;')
                            p
                                | 위치
                            #map.form-control(style='height: 400px;')
                .payment_box.col-xs-3
                    form(action="/message", method="post")
                        ul(style='list-style-type: none ;')
                            li
                                input(type='text', value=menu.price + '원 / 1회', readonly='')
                            li
                                input.datepicker(type='text', placeholder='년/월/일')
                            li
                                input(type='time', value='HH:mm')
                            li
                                span(style='margin-right: 4px;') 가능한 수량 #{menu.amount}개
                                input(style='width: 50px;', type='text', value='수량', readonly='')
                                input(style='width: 50px;', type='number')
                            li
                                button#message_btn.btn.btn-danger(type='submit', onclick="return premessage("+ session.email +")", style='width: 200px; margin-left: 12px;', data-toggle='modal', data-target='#pop-up-message', data-dismiss='modal') 메시지 보내기
                            li
                                textarea(readonly='', style='text-align: center; margin-top: 10px; width: 220px;') 판매자에게 문의 후 입금
                        input(type='hidden', name="member", value=member.email)
